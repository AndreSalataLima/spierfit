<h2>Cadastre-se</h2>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :contact_info %>
    <%= form.text_area :contact_info %>
  </div>

  <div class="field">
    <%= form.label :hours_of_operation %>
    <%= form.text_area :hours_of_operation %>
  </div>

  <div class="field">
    <%= form.label :equipment_list %>
    <%= form.text_area :equipment_list %>
  </div>

  <div class="field">
    <%= form.label :policies %>
    <%= form.text_area :policies %>
  </div>

  <div class="field">
    <%= form.label :subscriptions %>
    <%= form.text_area :subscriptions %>
  </div>

  <div class="field">
    <%= form.label :photos %>
    <%= form.text_area :photos %>
  </div>

  <div class="field">
    <%= form.label :events %>
    <%= form.text_area :events %>
  </div>

  <div class="field">
    <%= form.label :capacity %>
    <%= form.number_field :capacity %>
  </div>

  <div class="field">
    <%= form.label :safety_protocols %>
    <%= form.text_area :safety_protocols %>
  </div>

  <div class="actions">
    <%= form.submit "Cadastre-se" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
