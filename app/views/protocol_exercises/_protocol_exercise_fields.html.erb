<%= fields_for "workout_protocol[protocol_exercises_attributes][]", protocol_exercise do |pe_form| %>
  <div class="exercise-fields">
    <!-- Hidden field for muscle_group -->
    <%= pe_form.hidden_field :muscle_group %>

    <!-- Exercise Selection -->
    <div class="mb-4">
      <%= pe_form.label :exercise_id, 'Exercício', class: "text-gray-400 mb-2 block" %>
      <%= pe_form.collection_select :exercise_id, Exercise.where(muscle_group: protocol_exercise.muscle_group), :id, :name, { prompt: 'Selecione um exercício' }, class: "w-full h-12 px-4 rounded-full bg-[#202020] text-white focus:outline-none placeholder-gray-400" %>
    </div>

    <!-- Number of Sets -->
    <div class="mb-4">
      <%= pe_form.label :sets, 'Séries', class: "text-gray-400 mb-2 block" %>
      <%= pe_form.number_field :sets, class: "w-full h-12 px-4 rounded-full bg-[#202020] text-white focus:outline-none placeholder-gray-400", placeholder: "Número de séries", style: "caret-color: transparent;" %>
    </div>

    <!-- Min and Max Repetitions -->
    <div class="mb-4">
      <%= pe_form.label :min_repetitions, 'Repetições Mínimas', class: "text-gray-400 mb-2 block" %>
      <%= pe_form.number_field :min_repetitions, class: "w-full h-12 px-4 rounded-full bg-[#202020] text-white focus:outline-none placeholder-gray-400", placeholder: "Mínimo", style: "caret-color: transparent;" %>
    </div>
    <div class="mb-4">
      <%= pe_form.label :max_repetitions, 'Repetições Máximas', class: "text-gray-400 mb-2 block" %>
      <%= pe_form.number_field :max_repetitions, class: "w-full h-12 px-4 rounded-full bg-[#202020] text-white focus:outline-none placeholder-gray-400", placeholder: "Máximo", style: "caret-color: transparent;" %>
    </div>


    <!-- Day of Training -->
    <div class="mb-4">
      <%= pe_form.label :day, 'Dia do Treino', class: "text-gray-400 mb-2 block" %>
      <%= pe_form.select :day, options_for_select(('A'..'G').to_a), { prompt: 'Selecione o dia' }, class: "w-full h-12 px-4 rounded-full bg-[#202020] text-white focus:outline-none placeholder-gray-400" %>
    </div>

    <!-- Observation -->
    <div class="mb-4">
      <%= pe_form.label :observation, 'Observação', class: "text-gray-400 mb-2 block" %>
      <%= pe_form.text_area :observation, class: "w-full h-20 px-4 rounded-[20px] bg-[#202020] text-white focus:outline-none placeholder-gray-400", placeholder: "Observação", style: "caret-color: transparent;" %>
    </div>
  </div>
<% end %>
