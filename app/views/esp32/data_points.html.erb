<div class="w-full min-h-screen flex flex-col items-center bg-[#0e0e0e]">
  <div class="w-full max-w-[450px] p-3 space-y-6">
    <!-- Título da Página -->
    <h1 class="text-white text-lg font-semibold mt-4 mb-4">Dados Recebidos do ESP32</h1>

    <!-- Tabela de Dados -->
    <div class="w-full bg-[#202020] rounded-[30px] px-4 py-6">
      <table class="w-full text-white text-sm">
        <thead>
          <tr class="text-[#9c9c9c] text-xs">
            <th class="text-left py-2">ID</th>
            <th class="text-left py-2">Valor</th>
            <th class="text-left py-2">MAC Address</th> <!-- Nova coluna -->
            <th class="text-left py-2">Criado em</th>
          </tr>
        </thead>
        <tbody>
          <% @data_points.each do |data_point| %>
            <tr class="border-b border-[#393939]">
              <td class="py-2"><%= data_point.id %></td>
              <td class="py-2"><%= data_point.value %></td>
              <td class="py-2"><%= data_point.mac_address %></td> <!-- Exibe o MAC Address -->
              <td class="py-2"><%= data_point.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
