<%= content_for :title, "Editar #{@user.name}" %>

<div class="w-full min-h-screen bg-[#030a08] flex flex-col items-center p-0 overflow-x-hidden">
  <!-- Top Navigation -->
  <div class="w-full max-w-[428px] h-[70px] bg-[#a52502] rounded-bl-[30px] rounded-br-[30px] relative mb-4">
    <div class="absolute inset-0 bg-[#ff8137] opacity-20 rounded-bl-[30px] rounded-br-[30px]"></div>
    <div class="absolute inset-0 flex items-center justify-between px-4">
      <%= link_to 'javascript:history.back()', class: "w-8 h-8 bg-[#0e0e0e]/10 rounded-full border backdrop-blur-sm flex items-center justify-center" do %>
        <i class="fa fa-arrow-left text-white text-sm"></i>
      <% end %>
      <div class="flex-1 text-center">
        <div class="text-white text-base font-semibold">Editar <%= @user.name %></div>
      </div>
    </div>
  </div>

  <!-- Edit Form -->
  <div class="w-full max-w-[428px] bg-[#202020] rounded-[30px] px-6 py-6 mb-4">
    <%= form_with(model: @user, local: true) do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="mb-4 text-red-500">
          <h2 class="font-semibold"><%= pluralize(@user.errors.count, "erro") %> impediram o salvamento:</h2>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <div class="field">
          <%= form.label :password, "Senha", class: "text-white text-sm font-medium" %>
          <%= form.password_field :password, autocomplete: "new-password", class: "w-full bg-[#303030] text-white border-none rounded-md px-4 py-2" %>
        </div>

        <div class="field">
          <%= form.label :password_confirmation, "Confirmação de Senha", class: "text-white text-sm font-medium" %>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-[#303030] text-white border-none rounded-md px-4 py-2" %>
        </div>

        <% if flash[:alert] %>
          <div class="w-full bg-[#ff4d4d] border border-[#ff1a1a] text-white text-sm font-bold rounded-md px-4 py-2 mb-4 shadow-md flex items-center">
            <i class="fa fa-exclamation-circle mr-2"></i>
            <span><%= flash[:alert] %></span>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :phone, "Telefone", class: "text-white text-sm font-medium" %>
          <%= form.text_field :phone, class: "w-full bg-[#303030] text-white border-none rounded-md px-4 py-2" %>
        </div>

        <div class="field">
          <%= form.label :address, "Endereço", class: "text-white text-sm font-medium" %>
          <%= form.text_field :address, class: "w-full bg-[#303030] text-white border-none rounded-md px-4 py-2" %>
        </div>

        <div class="field">
          <%= form.label :status, "Status", class: "text-white text-sm font-medium" %>
          <%= form.text_field :status, class: "w-full bg-[#303030] text-white border-none rounded-md px-4 py-2" %>
        </div>

        <div class="field">
          <%= form.label :date_of_birth, "Data de Nascimento", class: "text-white text-sm font-medium" %>
          <%= form.date_field :date_of_birth, class: "w-full bg-[#303030] text-white border-none rounded-md px-4 py-2" %>
        </div>

        <div class="field">
          <%= form.label :height, "Altura (cm)", class: "text-white text-sm font-medium" %>
          <%= form.number_field :height, class: "w-full bg-[#303030] text-white border-none rounded-md px-4 py-2" %>
        </div>

        <div class="field">
          <%= form.label :weight, "Peso (kg)", class: "text-white text-sm font-medium" %>
          <%= form.number_field :weight, class: "w-full bg-[#303030] text-white border-none rounded-md px-4 py-2" %>
        </div>

        <div class="actions flex justify-between mt-4">
          <%= form.submit "Atualizar", class: "bg-[#a52502] text-white font-semibold px-6 py-2 rounded-full" %>
          <%= link_to 'Cancelar', user_path(@user), class: "bg-[#202020] text-white font-semibold px-6 py-2 rounded-full" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Bottom Navigation -->
  <div class="w-full max-w-[428px] bg-[#0e0e0e] rounded-t-[30px] p-3 mt-auto flex justify-around items-center">
    <div class="text-white text-sm"><i class="fa fa-home"></i></div>
    <div class="text-white text-sm"><i class="fa-solid fa-chart-column"></i></div>
    <%= link_to select_equipment_machines_path, class: "bg-[#a52502] rounded-full p-4 flex justify-center items-center" do %>
      <i class="fa fa-dumbbell text-white"></i>
    <% end %>
    <div class="text-white text-sm"><i class="fa fa-calendar-alt"></i></div>
    <%= link_to user_path(@user), class: "text-white text-sm" do %>
      <i class="fa fa-user"></i>
    <% end %>
  </div>
</div>
