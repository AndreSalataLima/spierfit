<h1>Users</h1>

<%= link_to 'New User', new_user_path %>

<%= turbo_frame_tag "users_list" do %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Status</th>
        <th>Date of Birth</th>
        <th>Height</th>
        <th>Weight</th>
        <th>Gym</th>
        <th>Personal</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr id="<%= dom_id(user) %>">
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.address %></td>
          <td><%= user.status %></td>
          <td><%= user.date_of_birth %></td>
          <td><%= user.height %></td>
          <td><%= user.weight %></td>
          <td><%= user.gym.try(:name) %></td>
          <td><%= user.personal.try(:name) %></td>
          <td><%= link_to 'Show', user, data: { turbo: false } %></td>
          <td><%= link_to 'Edit', edit_user_path(user), data: { turbo: false } %></td>
          <td><%= link_to 'Destroy', user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
