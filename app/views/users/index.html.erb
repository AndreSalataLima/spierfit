<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Status</th>
      <th>Date of Birth</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Gyms</th>
      <th>Personals</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= user.status %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= user.height %></td>
        <td><%= user.weight %></td>
        <td><%= link_to 'Show', user, data: { turbo: false } %></td>
        <td><%= link_to 'Edit', edit_user_path(user), data: { turbo: false } %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

