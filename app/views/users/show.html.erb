<%= content_for :title, @user.name %>

<div class="w-full min-h-screen bg-[#030a08] flex flex-col items-center p-0 overflow-x-hidden">
  <!-- Top Navigation -->
  <div class="w-full max-w-[428px] h-[70px] bg-[#a52502] rounded-bl-[30px] rounded-br-[30px] relative mb-4">
    <div class="absolute inset-0 bg-[#ff8137] opacity-20 rounded-bl-[30px] rounded-br-[30px]"></div>
    <div class="absolute inset-0 flex items-center justify-between px-4">
      <%= link_to 'javascript:history.back()', class: "w-8 h-8 bg-[#0e0e0e]/10 rounded-full border backdrop-blur-sm flex items-center justify-center" do %>
        <i class="fa fa-arrow-left text-white text-sm"></i>
      <% end %>
      <div class="flex-1 text-center">
        <div class="text-white text-base font-semibold"><%= @user.name %></div>
      </div>
    </div>
  </div>

  <!-- User Details -->
  <div class="w-full max-w-[428px] bg-[#202020] rounded-[30px] px-6 py-6 mb-4">
    <div class="text-[#d9d9d9] text-base font-medium mb-4">Detalhes do Aluno</div>

  <div class="text-white mb-4">
    <strong>Telefone:</strong> <%= @user.phone.presence || "-" %>
  </div>

  <div class="text-white mb-4">
    <strong>Endere√ßo:</strong> <%= @user.address.presence || "-" %>
  </div>

  <div class="text-white mb-4">
    <strong>Status:</strong> <%= @user.status.presence || "-" %>
  </div>

  <div class="text-white mb-4">
    <strong>Data de Nascimento:</strong> <%= @user.date_of_birth ? @user.date_of_birth.strftime("%d/%m/%Y") : "-" %>
  </div>

  <div class="text-white mb-4">
    <strong>Altura:</strong> <%= @user.height ? "#{@user.height} cm" : "-" %>
  </div>

  <div class="text-white mb-4">
    <strong>Peso:</strong> <%= @user.weight ? "#{@user.weight} kg" : "-" %>
  </div>

    <div class="text-white mb-4">
      <strong>Academias:</strong>
      <% if @user.gyms.any? %>
        <ul class="list-disc list-inside">
          <% @user.gyms.each do |gym| %>
            <li><%= gym.name %></li>
          <% end %>
        </ul>
      <% else %>
        Nenhuma academia associada
      <% end %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="w-full max-w-[428px] flex justify-around mb-4">
    <%= link_to 'Editar', edit_user_path(@user), class: "bg-[#a52502] text-white font-semibold px-6 py-2 rounded-full" %>
    <%= link_to 'Voltar', users_path, class: "bg-[#202020] text-white font-semibold px-6 py-2 rounded-full" %>
  </div>

  <!-- Bottom Navigation -->
  <div class="w-full max-w-[428px] bg-[#0e0e0e] rounded-t-[30px] p-3 mt-auto flex justify-around items-center">
    <div class="text-white text-sm"><i class="fa fa-home"></i></div>
    <div class="text-white text-sm"><i class="fa-solid fa-chart-column"></i></div>
    <%= link_to select_equipment_machines_path, class: "bg-[#a52502] rounded-full p-4 flex justify-center items-center" do %>
      <i class="fa fa-dumbbell text-white"></i>
    <% end %>
    <div class="text-white text-sm"><i class="fa fa-calendar-alt"></i></div>
    <div class="text-white text-sm"><i class="fa fa-user"></i></div>
  </div>
</div>
