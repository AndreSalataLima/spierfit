<h1><%= @user.name %></h1>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<p>
  <strong>Address:</strong>
  <%= @user.address %>
</p>

<p>
  <strong>Status:</strong>
  <%= @user.status %>
</p>

<p>
  <strong>Date of Birth:</strong>
  <%= @user.date_of_birth %>
</p>

<p>
  <strong>Height:</strong>
  <%= @user.height %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @user.weight %>
</p>

<p>
  <strong>Gyms:</strong>
  <% if @user.gyms.any? %>
    <ul>
      <% @user.gyms.each do |gym| %>
        <li><%= gym.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No gyms associated.</p>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
