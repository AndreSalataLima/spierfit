<div class="w-full min-h-screen flex flex-col items-center justify-start bg-[#0e0e0e] p-4">
  <!-- Profile Section -->
  <div class="w-full max-w-[450px] flex items-center mt-4 mb-4">
    <div class="w-[60px] h-[60px] bg-[#393939] rounded-full"></div>
    <div class="ml-4">
      <div class="text-white text-lg font-semibold">Pedro Larry</div>
      <div class="text-[#6a6a6a] text-xs">20 anos - 78 kg - 1,78 m</div>
    </div>
  </div>

  <!-- Progress Card -->
  <div class="w-full max-w-[450px] bg-[#202020] rounded-[30px] p-4 mb-6">
    <div class="text-white text-base font-semibold mb-2">Meu Progresso</div>
    <div class="flex justify-between items-center text-[#9c9c9c] text-xs mb-2">
      <span>0</span>
      <span>500</span>
    </div>
    <div class="flex justify-between text-white text-sm mb-2">
      <span>Sun</span>
      <span>Mon</span>
      <span>Tue</span>
      <span>Wed</span>
      <span>Thu</span>
      <span>Fri</span>
      <span>Sat</span>
    </div>
    <div class="flex justify-between items-end h-16">
      <div class="bg-[#a52502] w-2 h-[40%] rounded-md"></div>
      <div class="bg-[#a52502] w-2 h-[60%] rounded-md"></div>
      <div class="bg-[#a52502] w-2 h-[80%] rounded-md"></div>
      <div class="bg-[#a52502] w-2 h-[50%] rounded-md"></div>
      <div class="bg-[#a52502] w-2 h-[70%] rounded-md"></div>
      <div class="bg-[#a52502] w-2 h-[30%] rounded-md"></div>
      <div class="bg-[#a52502] w-2 h-[90%] rounded-md"></div>
    </div>
  </div>

  <!-- Training Card -->
  <div class="w-full max-w-[450px] bg-gradient-to-b from-[#a52502] to-[#390d02] rounded-[30px] p-6 mb-6 relative">
    <div class="absolute inset-0 bg-[#ff8137] opacity-20 rounded-[30px]"></div>
    <div class="relative">
      <div class="bg-[#0e0e0e]/10 rounded-full px-4 py-2 inline-block mb-4">
        <div class="text-white text-xs font-medium">Avançado</div>
      </div>
      <div class="text-white text-lg font-semibold">Iniciar Treino</div>
      <div class="text-white text-xs">Full body workout</div>
    </div>
  </div>

  <!-- History Card -->
  <div class="w-full max-w-[450px] bg-gradient-to-b from-[#1c8394] to-[#154b52] rounded-[30px] p-6 mb-6 relative">
    <div class="absolute inset-0 bg-[#ff8137] opacity-20 rounded-[30px]"></div>
    <div class="relative">
      <div class="bg-[#0e0e0e]/10 rounded-full px-4 py-2 inline-block mb-4">
        <div class="text-white text-xs font-medium">Beginner</div>
      </div>
      <div class="text-white text-lg font-semibold">Histórico de Treino</div>
      <div class="text-white text-xs">Full body workout</div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <div class="w-full max-w-[450px] bg-[#0e0e0e] rounded-t-[30px] p-4 flex justify-around items-center">
    <div class="text-white"><i class="fa fa-home"></i></div>
    <div class="text-white"><i class="fa-solid fa-chart-column"></i></div>
    <div class="bg-[#a52502] rounded-full p-4">
      <i class="fa fa-dumbbell text-white"></i>
    </div>
    <div class="text-white"><i class="fa fa-calendar-alt"></i></div>
    <div class="text-white"><i class="fa fa-user"></i></div>
  </div>
</div>
