<div class="w-full min-h-screen flex flex-col items-center justify-center bg-[#0e0e0e] p-4">
  <div class="w-full max-w-[350px] space-y-8">
    <%= image_tag 'logo_300x175.png', alt: 'Logo SpierFit', class: 'w-full max-w-[250px] h-auto mx-auto mt-4 mb-8' %>
    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-6 w-full") do |form| %>
      <%= devise_error_messages! %>

      <div class="w-full bg-[#303030] rounded-[100px] px-6 py-4 flex items-center gap-4">
        <div class="w-32 text-center text-white text-lg font-medium font-['Manrope']">Login</div>
        <%= form.email_field :email, autofocus: true, class: "bg-transparent border-none text-white flex-1 text-lg" %>
      </div>

      <div class="w-full bg-[#303030] rounded-[100px] px-6 py-4 flex items-center gap-4">
        <div class="w-32 text-center text-white text-lg font-medium font-['Manrope']">Senha</div>
        <%= form.password_field :password, autocomplete: "current-password", class: "bg-transparent border-none text-white flex-1 text-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="w-full flex items-center justify-between gap-4 py-4">
          <label class="text-white text-lg flex items-center">
            <%= form.check_box :remember_me, class: "mr-2" %> Remember Me
          </label>
          <a href="<%= new_user_password_path %>" class="text-white text-lg">Forgot Password?</a>
        </div>
      <% end %>

      <div class="w-full bg-[#a52502] rounded-[100px] flex justify-center items-center gap-6 py-4">
        <%= form.submit "Entrar", class: "text-center text-white text-lg font-bold font-['Manrope']" %>
      </div>
    <% end %>

    <p class="text-center text-white mt-3 mb-0">Don't have an account? <%= link_to "Sign Up", new_user_registration_path, class: "text-blue-500" %></p>
  </div>
</div>
