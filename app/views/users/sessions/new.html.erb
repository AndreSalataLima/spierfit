<h2>Login</h2>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |form| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= form.check_box :remember_me %>
      <%= form.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Login" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
