<h1>Máquinas Disponíveis</h1>

<% if @machines.present? %>
  <% @machines.each do |machine| %>
    <div>
      <h2><%= machine.name %></h2>
      <p><%= machine.description %></p>
      <%= link_to 'Ver Exercícios', machine_exercises_machine_path(machine) %>
    </div>
  <% end %>
<% else %>
  <p>Nenhuma máquina disponível</p>
<% end %>

<% if @current_workout %>
  <%= button_to 'Finalizar Workout', complete_workout_path(@current_workout), method: :post %>
<% end %>
