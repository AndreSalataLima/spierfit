<h1>Exercícios para <%= @machine.name %></h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Grupo Muscular</th>
      <th>Descrição</th>
      <th>Ação</th>
    </tr>
  </thead>
  <tbody>
    <% if @exercises.any? %>
      <% @exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.name %></td>
          <td><%= exercise.muscle_group %></td>
          <td><%= exercise.description %></td>
          <td><%= link_to 'Iniciar Exercício', start_exercise_set_machine_path(@machine, exercise.id) %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">Nenhum exercício disponível</td>
      </tr>
    <% end %>
  </tbody>
</table>
