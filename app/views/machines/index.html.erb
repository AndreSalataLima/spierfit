<h1>Machines</h1>
<%= link_to 'New Machine', new_machine_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Compatible Exercises</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <td><%= machine.name %></td>
        <td><%= machine.description %></td>
        <td><%= machine.compatible_exercises.join(', ') %></td>
        <td><%= machine.status %></td>
        <td><%= link_to 'Show', machine_path(machine) %></td> 
        <td><%= link_to 'Edit', edit_machine_path(machine) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
