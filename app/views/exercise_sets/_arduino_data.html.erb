<%= turbo_frame_tag("arduino_chart") do %>
  <%= area_chart arduino_data.map { |datum| [datum.recorded_at, datum.value] },
                 height: "300px",
                 width: "100vw",
                 colors: ["#fa2327"],
                 id: "chart-1",
                 min: -1100,    # Define o limite mínimo para o eixo Y
                 max: -1030,    # Define o limite máximo para o eixo Y
                 xtitle: "Time",
                 ytitle: "Value",
                 library: {
                   scales: {
                     xAxes: [{
                       display: false,  # Tentativa de remover completamente o eixo X
                       ticks: {
                         display: false  # Assegura que os ticks também não sejam exibidos
                       }
                     }],
                     yAxes: [{
                       ticks: {
                         suggestedMin: -1100,
                         suggestedMax: -1030
                       }
                     }]
                   }
                 } %>
<% end %>
