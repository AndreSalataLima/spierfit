<!-- app/views/exercise_sets/edit.html.erb -->
<div class="w-full min-h-screen bg-[#030a08] flex flex-col items-center p-0 overflow-x-hidden">
  <!-- Top Navigation -->
  <div class="w-full max-w-[428px] h-[70px] bg-[#a52502] rounded-bl-[30px] rounded-br-[30px] relative mb-2">
    <div class="absolute inset-0 bg-[#ff8137] opacity-20 rounded-bl-[30px] rounded-br-[30px]"></div>
    <div class="absolute inset-0 flex items-center justify-between px-4">
      <!-- Back Button -->
      <div class="w-8 h-8 bg-[#0e0e0e]/10 rounded-full border backdrop-blur-sm flex items-center justify-center">
        <i class="fa fa-arrow-left text-white text-sm"></i>
      </div>
      <!-- Title -->
      <div class="flex-1 text-center">
        <div class="text-white text-base font-semibold">Editando treino</div>
      </div>
    </div>
  </div>

  <!-- Exercise Details -->
  <div class="w-full max-w-[428px] bg-[#151c1c] rounded-[30px] p-4 mb-2">
    <div class="text-white text-base font-semibold mb-2"><%= @exercise_set.exercise.name %></div>
    <div class="w-full max-w-[400px] h-[200px] space-y-4 mb-4 flex items-center justify-center mx-auto">
      <%= image_tag "https://via.placeholder.com/349x210", class: "w-full rounded-[20px]" %>
    </div>

    <div class="flex justify-between my-3 text-white text-sm">
      <div class="flex flex-col items-center">
        <div class="text-base font-semibold"><%= @exercise_set.reps %></div>
        <div class="text-[#9c9c9c] text-xs">Repetições</div>
      </div>
      <div class="flex flex-col items-center">
        <div class="text-base font-semibold"><%= @exercise_set.sets %></div>
        <div class="text-[#9c9c9c] text-xs">Séries</div>
      </div>
      <div class="flex flex-col items-center">
        <div class="text-base font-semibold"><%= @exercise_set.weight %>kg</div>
        <div class="text-[#9c9c9c] text-xs">Carga</div>
      </div>
    </div>

    <div class="flex justify-between my-3 text-white text-sm">
      <div class="flex flex-col items-center">
        <div class="text-xl font-semibold text-[#ff8900]"><%= @exercise_set.rest_time %>s</div>
        <div class="text-[#d9d9d9] text-xs">Tempo de repouso</div>
      </div>
      <div class="flex flex-col items-center">
        <div class="text-xl font-semibold text-white"><%= @exercise_set.energy_consumed %> CAL</div>
        <div class="text-[#d9d9d9] text-xs">Calorias Totais</div>
      </div>
    </div>
  </div>

  <!-- Série Details -->
  <div class="w-full max-w-[428px] bg-[#151c1c] rounded-[30px] p-4 mb-2">
    <h2 class="text-white text-lg font-semibold mb-4">Série</h2>
    <%= form_with(model: @exercise_set, url: exercise_set_path(@exercise_set), method: :patch, local: true) do |form| %>
      <div class="w-full bg-[#303030] rounded-[20px] p-2 mb-4">
        <div class="flex justify-between items-center mb-2">
          <div class="text-white text-sm font-semibold">Série 1</div>
          <div class="text-white text-sm"><i class="fa fa-chevron-up"></i></div>
        </div>
        <div class="flex justify-between items-center text-white text-sm mb-2 space-x-2">
          <div>
            <label for="serie_reps" class="block text-xs mb-1">Repetições</label>
            <%= form.number_field :reps, id: "serie_reps", class: "bg-[#202020] rounded-md p-2 text-white text-xs w-16 focus:outline-none focus:ring-2 focus:ring-[#ff8137]" %>
          </div>
          <div>
            <label for="serie_weight" class="block text-xs mb-1">Carga</label>
            <%= form.number_field :weight, id: "serie_weight", class: "bg-[#202020] rounded-md p-2 text-white text-xs w-16 focus:outline-none focus:ring-2 focus:ring-[#ff8137]" %>
          </div>
        </div>
        <div class="flex justify-between items-center text-white text-sm mb-2 space-x-2">
          <div>
            <label for="serie_rest_time" class="block text-xs mb-1">Tempo de repouso</label>
            <%= form.number_field :rest_time, id: "serie_rest_time", class: "bg-[#202020] rounded-md p-2 text-white text-xs w-16 focus:outline-none focus:ring-2 focus:ring-[#ff8137]" %>
          </div>
          <div>
            <label for="serie_energy_consumed" class="block text-xs mb-1">Calorias Totais</label>
            <%= form.number_field :energy_consumed, id: "serie_energy_consumed", class: "bg-[#202020] rounded-md p-2 text-white text-xs w-16 focus:outline-none focus:ring-2 focus:ring-[#ff8137]" %>
          </div>
        </div>
        <div class="flex justify-center">
          <%= form.submit "Salvar", class: "bg-[#a52502] rounded-full px-3 py-1 text-white text-xs" %>
        </div>
      </div>
    <% end %>

    <!-- Closed Série 2 -->
    <div class="w-full bg-[#303030] rounded-[20px] p-2 mb-4">
      <div class="flex justify-between items-center">
        <div class="text-white text-sm font-semibold">Série 2</div>
        <div class="text-white text-sm"><i class="fa fa-chevron-down"></i></div>
      </div>
    </div>

    <!-- Closed Série 3 -->
    <div class="w-full bg-[#303030] rounded-[20px] p-2 mb-4">
      <div class="flex justify-between items-center">
        <div class="text-white text-sm font-semibold">Série 3</div>
        <div class="text-white text-sm"><i class="fa fa-chevron-down"></i></div>
      </div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <div class="w-full max-w-[428px] bg-[#0e0e0e] rounded-t-[30px] p-3 mt-auto flex justify-around items-center">
    <div class="text-white text-sm"><i class="fa fa-home"></i></div>
    <div class="text-white text-sm"><i class="fa-solid fa-chart-column"></i></div>
    <a href="/machines/select_equipment" class="bg-[#a52502] rounded-full p-3">
      <i class="fa-solid fa-stop text-white text-lg"></i>
    </a>
    <div class="text-white text-sm"><i class="fa fa-calendar-alt"></i></div>
    <div class="text-white text-sm"><i class="fa fa-user"></i></div>
  </div>
</div>
