<h1>Personals</h1>

<%= link_to 'New Personal', new_personal_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Specialization</th>
      <th>Availability</th>
      <th>Bio</th>
      <th>Rating</th>
      <th>Languages</th>
      <th>Emergency Contact</th>
      <th>Current Clients</th>
      <th>Certifications</th>
      <th>Photos</th>
      <th>Plans</th>
      <th>Achievements</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @personals.each do |personal| %>
      <tr id="<%= dom_id(personal) %>">
        <td><%= personal.name %></td>
        <td><%= personal.email %></td>
        <td><%= personal.specialization %></td>
        <td><%= personal.availability %></td>
        <td><%= personal.bio %></td>
        <td><%= personal.rating %></td>
        <td><%= personal.languages %></td>
        <td><%= personal.emergency_contact %></td>
        <td><%= personal.current_clients %></td>
        <td><%= personal.certifications %></td>
        <td><%= personal.photos %></td>
        <td><%= personal.plans %></td>
        <td><%= personal.achievements %></td>
        <td><%= link_to 'Show', personal %></td>
        <td><%= link_to 'Edit', edit_personal_path(personal) %></td>
        <td><%= link_to 'Destroy', personal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
