<h1>Personals</h1>

<%= link_to 'New Personal', new_personal_path %>

<%= turbo_frame_tag "personals_list" do %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Specialization</th>
        <th>Availability</th>
        <th>Bio</th>
        <th>Rating</th>
        <th>Languages</th>
        <th>Emergency Contact</th>
        <th>Current Clients</th>
        <th>Certifications</th>
        <th>Photos</th>
        <th>Plans</th>
        <th>Achievements</th>
        <th>User</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @personals.each do |personal| %>
        <tr>
          <td><%= personal.name %></td>
          <td><%= personal.email %></td>
          <td><%= personal.specialization %></td>
          <td><%= personal.availability %></td>
          <td><%= personal.bio %></td>
          <td><%= personal.rating %></td>
          <td><%= personal.languages %></td>
          <td><%= personal.emergency_contact %></td>
          <td><%= personal.current_clients %></td>
          <td><%= personal.certifications %></td>
          <td><%= personal.photos %></td>
          <td><%= personal.plans %></td>
          <td><%= personal.achievements %></td>
          <td><%= personal.user&.name %></td>
          <td><%= link_to 'Show', personal, data: { turbo: false } %></td>
          <td><%= link_to 'Edit', edit_personal_path(personal), data: { turbo: false } %></td>
          <td><%= link_to 'Destroy', personal, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
